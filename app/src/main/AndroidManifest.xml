<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fynn.buttons">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fynn.buttons.MenuActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>



        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MenuActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>



        <activity android:name=".NewGameActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fynn.buttons.MenuActivity" />

            <intent-filter>
                <action android:name="com.example.fynn.buttons.NewGameActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>




        <activity android:name=".GameActivity">
            <intent-filter>
                <action android:name="com.example.fynn.buttons.GameActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>





        <activity android:name=".GameOverActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fynn.buttons.MenuActivity" />
            <intent-filter>
                <action android:name="com.example.fynn.buttons.GameOverActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>




        <activity
            android:name=".ScoresActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.fynn.buttons.ScoresActivity" />

        <intent-filter>
            <action android:name="com.example.fynn.buttons.ScoresActivity" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>

    </application>

</manifest>
